---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "@components/sections/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.jpg";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";


---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Entérate de las novedades"
    url="/blog"
    
  />

  <HeroSection
    title=`MÁS DE 50 AÑOS FORMANDO <span
        class="text-[#0036B3] dark:text-[#0042FF]">FUTURO</span>`
    subTitle="Educación pública de excelencia, que transforma vidas y fortalece nuestra comunidad."
    primaryBtn="Noticias"
    primaryBtnURL="/products"
    secondaryBtn="Contacto"
    secondaryBtnURL="/contact"
    src={heroImage}
    alt="Estudiantes del Liceo Bicentenario Valle Hermoso en actividades escolares"
  />
  
  <FeaturesGeneral
    title="Excelencia Educativa para la Comunidad"
    subTitle="Consolidarnos como una entidad educativa de excelencia, inclusiva y diversa, formando estudiantes felices, con sólidos principios éticos y valóricos, capaces de desarrollar habilidades y competencias necesarias para realizar sus proyectos de vida."
    src={featureImage}
    alt="Estudiantes y comunidad educativa del Liceo Bicentenario Valle Hermoso"
    features={features}
  />

  <FeaturesNavs
    title=`Formación en <span class="text-[#0036B3] dark:text-[#0042FF]">todos los niveles</span>, conoce toda nuestra oferta educativa.`
    tabs={[
      {
        heading: "Educación Parvularia",
        content:
          "Formación inicial desde Prekínder, centrada en el desarrollo integral de niños y niñas en sus primeras etapas educativas.",
        svg: "tools",
        src: tools,
        alt: "Educación Parvularia",
        first: true,
      },
      {
        heading: "Enseñanza Básica",
        content:
          "Cobertura de 1° a 8° básico, enfocada en entregar las bases del aprendizaje, valores y competencias fundamentales.",
        svg: "dashboard",
        src: dashboard,
        alt: "Enseñanza Básica",
        second: true,
      },
      {
        heading: "Enseñanza Media TP Comercial",
        content:
          "Especialidad de Administración, con mención en Recursos Humanos, orientada a la gestión de personas y procesos administrativos.",
        svg: "house",
        src: construction,
        alt: "Administración mención RRHH",
      },
      {
        heading: "Enseñanza Media TP Industrial",
        content:
          "Especialidad de Construcción, con mención en Terminaciones y Edificación, preparando técnicos con competencias prácticas en el área de la construcción.",
        svg: "house",
        src: construction,
        alt: "Construcción: Terminaciones y Edificación",
      },
    ]}
  />

  <TestimonialsSection
    title="Resultados que hablan por nosotros "
    subTitle="Comprometidos con la formación integral y la excelencia académica en Peñalolén."
    ;
    testimonials={[
      {
        content:
          "El Liceo Bicentenario Valle Hermoso nos entregó las herramientas para seguir estudiando y cumplir nuestros sueños. La formación técnico-profesional abre puertas reales.",
        author: "Francisca Gonzalez",
        role: "Egresada Especialidad de Construcción 2024.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "2018",
        description:
          "reconocido como Liceo Bicentenario de Excelencia",
      },
      {
        count: "50",
        description:
          "años de historia formando generaciones en Peñalolén",
      },
      {
        count: "75%",
        description:
          "de los egresados continúa estudios superiores o técnicos",
      },
      {
        count: "750+",
        description: "estudiantes desde Educación Parvularia hasta 4° Medio",
      },
    ]}
  />
  <FAQ title="Preguntas<br />Frecuentes" faqs={faqs} />
  <HeroSectionAlt
    title="Formando Futuro con Excelencia"
    subTitle="Nuestro compromiso es guiar a estudiantes, familias y docentes hacia un aprendizaje significativo y una comunidad escolar más fuerte."
    url="/products"
  />
  <ClientsSection
    title="Enlaces de Interés"
    subTitle="Accede a portales y organismos vinculados a nuestra comunidad educativa."
    partners={partnersData}
  />
</MainLayout>
