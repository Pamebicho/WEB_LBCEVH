---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contacto | ${SITE.title}`;
const metaDescription =
  "¿Tienes dudas o quieres conversar con nosotros? Escríbenos.";
const ogTitle = "Contáctanos | Liceo bicentenario centro educacional valle hermoso";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://LBCEVH_DOMINIO.CL/contact",
    url: "https://LBCEVH_DOMINIO.CL/contact",
    name: "Contáctanos | Liceo bicentenario centro educacional valle hermoso",
    description:
      "¿Tienes dudas o quieres conversar con nosotros? Escríbenos.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://LBCEVH_DOMINIO.CL",
      name: "Liceo Bicentenario Centro Educacional Valle Hermoso",
      description:
        "Portal informativo oficial del liceo para estudiantes, apoderados y docentes.",
    },
    inLanguage: "es-CL",
  }}
>
  <ContactSection />
</MainLayout>
