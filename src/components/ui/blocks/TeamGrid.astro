---
interface Member {
  name: string;
  role: string;
  email?: string;
  phone?: string;
  photoUrl?: string;
  bio?: string;
}
interface Props {
  title?: string;
  subTitle?: string;
  members: Member[];
}
const {
  title = "Equipo Directivo",
  subTitle = "Liderazgo pedagógico y gestión al servicio de la comunidad educativa.",
  members = [],
} = Astro.props;
---

<section class="mx-auto max-w-6xl px-4 py-12 sm:px-6 lg:px-8">
  <div class="mx-auto mb-10 max-w-3xl text-center">
    <h2 class="mb-4 text-balance text-4xl font-extrabold tracking-tight text-neutral-800 dark:text-neutral-200">{title}</h2>
    <p class="mt-3 text-lg text-gray-600 dark:text-gray-300">{subTitle}</p>
  </div>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-2">
    {members.map((m) => (
      <div class="flex items-center gap-4 rounded-2xl bg-gray-300/20 border border-gray-400 p-4 shadow-sm transition hover:shadow-md dark:border-gray-800 dark:bg-white/[.075]">
        <img
          src={m.photoUrl || "https://placehold.co/96x96?text=Foto"}
          alt={m.name}
          class="h-18 w-18 rounded-full object-cover ring-2 ring-[#0036B3]/30"
          loading="lazy"
        />
        <div>
          <h3 class="text-base font-semibold text-gray-900 dark:text-white">{m.name}</h3>
          <p class="text-sm text-gray-900 dark:text-gray-300">{m.role}</p>
  
          {m.bio && (
            <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">
              {m.bio}
            </p>
          )}

          <div class="mt-1 text-xs text-gray-900 dark:text-gray-400">
            {m.email && <a href={`mailto:${m.email}`} class="hover:underline">{m.email}</a>}
            {m.phone && <span class="ms-2">{m.phone}</span>}
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
